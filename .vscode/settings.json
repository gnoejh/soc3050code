{
    // Student-friendly ATmega128 development environment
    // Simple configuration without complex MPLAB dependencies
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // File associations for embedded development
    "files.associations": {
        "*.c": "c",
        "*.h": "c",
        "*.hex": "intel-hex",
        "*.elf": "binary"
    },
    // C/C++ IntelliSense configured via c_cpp_properties.json
    // Disable error squiggles for AVR cross-compilation (known IntelliSense limitation)
    "C_Cpp.errorSquiggles": "disabled",
    // Python environment configuration
    "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    // Extensions for student workflow
    "extensions.recommendations": [
        "ms-vscode.vscode-serial-monitor",
        "ms-vscode.cpptools",
        "ms-vscode.powershell",
        "ms-python.python"
    ],
    // Clean editor settings
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // Hide complex files from students
    "files.exclude": {
        "**/.git": true,
        "**/cmake": true,
        "**/_build": true,
        "**/*.o": true,
        "**/*.d": true,
        "**/Debug": true,
        "**/Release": true
    }
}